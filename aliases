# Master alias list

if [ -x /usr/bin/dircolors ]; then
    test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
    alias grep='grep --color=auto'
    alias fgrep='fgrep --color=auto'
    alias egrep='egrep --color=auto'
fi

alias l='ls -alF'
alias la='ll -AF --group-directories-first'
alias lc='ls -ltcr'        			#  Sort by/show change time,most recent last.
alias ld='ls -al -d * | egrep "^d"' # only subdirectories
alias lg="ls -lv --group-directories-first"
alias lk='ls -lSr'         			#  Sort by size, biggest last.
alias ll='ls -alF'
alias lr='ll -R'       
alias ls='ls --color=auto'
alias ls='ls -lh --color'
alias lt='ls -ltr'         			#  Sort by date, most recent last.
alias lu='ls -ltur'        			#  Sort by/show access time,most recent last.
alias lx='ls -lXB'         			#  Sort by extension.
alias tree='tree -Csuh'    			#  Nice alternative to 'recursive ls' ...

alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias cd..='cd ..'
alias back='cd $OLDPWD'
alias md='mkdir -p'		   #  Makes parent directories as needed
alias mkdir='md'
alias backgrounds='cd ~/Pictures/Wallpapers'
alias backups='cd ~/Backups'
alias documents='cd ~/Documents'
alias downloads='cd ~/Downloads'
alias home='cd ~/'
alias images='cd ~/Images'
alias movies='cd ~/Videos'
alias music='cd ~/Music'
alias path='echo $PATH | tr -s ":" "\n"'
alias pictures='cd ~/Pictures'
alias videos='cd ~/Videos'
alias recent='ls -alt | head -20' 	# recently changed files

alias h='history'
alias j='jobs -l'
alias which='type -a'
alias psg='ps -A | grep'




# Typo fixes

alias xs='cd'
alias vf='cd'
alias moer='more'
alias moew='more'
alias kk='ll'



